# SpeechLab Credentials
SPEECHLAB_EMAIL=
SPEECHLAB_PASSWORD=

# Twitter Credentials (REQUIRED for Mention Daemon Mode (`npm run start:daemon`))
# Optional for standard Batch Mode (`npm start`) if only using SpacesDashboard data
TWITTER_USERNAME=
TWITTER_PASSWORD=
# OR Twitter API Keys (if switching approach later)
# TWITTER_API_KEY=
# TWITTER_API_SECRET=
# TWITTER_ACCESS_TOKEN=
# TWITTER_ACCESS_SECRET=

# AWS Credentials (will use environment variables if set, otherwise provide here)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1 # Optional: Can often be inferred from environment or AWS config
AWS_S3_BUCKET=speechlab-test-files-public

# Agent Configuration
TARGET_LANGUAGE=es_la
DUB_ACCENT=es_la
SOURCE_LANGUAGE=en
# Delay between processing different profiles (in milliseconds), for future use
DELAY_BETWEEN_PROFILES_MS=300000 # 5 minutes

# Logging Level (e.g., info, debug, error)
LOG_LEVEL=info

# ---- Python Scraper Utility ----
# Required API Key for nova-act library
NOVA_ACT_API_KEY=

# Test Profile URL (for initial development)
TEST_PROFILE_URL=https://x.com/MarioNawfal

# Set to true to run the browser in headless mode (no UI), false to see the browser window
BROWSER_HEADLESS=false
# Set to true to attach generated MP4 video to reply tweet, false to only post link
POST_REPLY_WITH_VIDEO=false
# Set to true to use Twitter API for posting replies, false to use Playwright UI automation
USE_TWITTER_API_FOR_REPLY=false 